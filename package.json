{
  "name": "future-prospect",
  "version": "1.0.0",
  "description": "A minimal Electron application with TypeScript",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://www.electronjs.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "web": "vite dev",
    "test": "vitest",
    "test:ci": "vitest run",
    "build": "npm run typecheck && electron-vite build",
    "predeploy": "vite build && echo 'future-prospect.com' > ./src/renderer/dist/CNAME",
    "deploy": "gh-pages -d src/renderer/dist",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config",
    "build:all": "npm run build && electron-builder -mwl --config"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^1.0.3",
    "@electron-toolkit/utils": "^1.0.2",
    "gl-matrix": "^3.4.3",
    "jwt-decode": "^3.1.2",
    "protobufjs": "^7.2.2",
    "reconnecting-websocket": "^4.4.0",
    "seedrandom": "^3.0.5",
    "stats.js": "^0.17.0",
    "steamworks.js": "^0.2.0",
    "tone": "^14.7.77"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^3.0.1",
    "@types/node": "22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "@vitest/browser": "^0.32.2",
    "@webgpu/types": "^0.1.60",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "electron-vite": "^3.1.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "gh-pages": "^5.0.0",
    "prettier": "^3.5.3",
    "sass": "^1.86.3",
    "typescript": "^5.8.2",
    "vite": "^6.2.5",
    "vitest": "^0.32.2",
    "webdriverio": "^9.12.3"
  }
}

{
  "name": "future-prospect",
  "version": "1.0.0",
  "description": "A minimal Electron application with TypeScript",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://www.electronjs.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "web": "vite dev",
    "build": "npm run typecheck && electron-vite build",
    "predeploy": "vite build && echo 'future-prospect.com' > ./src/renderer/dist/CNAME",
    "deploy": "gh-pages -d src/renderer/dist",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config",
    "build:all": "npm run build && electron-builder -mwl --config"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^1.0.3",
    "@electron-toolkit/utils": "^1.0.2",
    "gl-matrix": "^3.4.3",
    "jwt-decode": "^3.1.2",
    "protobufjs": "^7.2.2",
    "reconnecting-websocket": "^4.4.0",
    "seedrandom": "^3.0.5",
    "stats.js": "^0.17.0",
    "steamworks.js": "^0.0.28",
    "tone": "^14.7.77"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^1.2.3",
    "@types/jasmine": "^4.3.1",
    "@types/node": "16.18.11",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@webgpu/types": "^0.1.24",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "electron-vite": "^1.0.23",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gh-pages": "^5.0.0",
    "prettier": "^2.8.2",
    "typescript": "^4.9.4",
    "vite": "^4.3.9"
  }
}
